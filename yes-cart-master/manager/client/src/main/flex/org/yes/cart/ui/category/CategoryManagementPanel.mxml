        private function onUriChange(event:Event):void {

            // "'$&+,/:;=?@<>#%{} |\^~[]`
            var invalid:RegExp = /(["'\$&\+,\/:;=\?@<>#%\{\} \|\\^~\[\]`])/g;

            if (invalid.test(uriNameTextInput.text)) {
                uriNameTextInput.errorString = resourceManager.getString('CategoryManagementPanel', 'urlInvalid');
                return;
            } else {
                uriNameTextInput.errorString = '';
            }

            remoteCategoryService.isUriAvailableForCategory(uriNameTextInput.text, selectedCategoryDTOImpl.categoryId);
        }


        private function onUriAvailableForCategoryResult(event:ResultEvent):void {

            var _available:Boolean = Boolean(event.result);
            if (_available) {
