         */
        private function saveChangedCategory(dto:CategoryDTOImpl):void {
            if (DomainUtils.isNewPK(dto.categoryId)) {
                remoteCategoryService.create(dto);
            } else {
                remoteCategoryService.update(dto);
            }
        }


