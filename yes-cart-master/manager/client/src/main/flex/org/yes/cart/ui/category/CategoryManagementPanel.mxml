                productTypeFinderPopUp.selectProductTypeButton.removeEventListener(MouseEvent.CLICK, onAssignSelectedProductTypeConfirm);
                PopUpManager.removePopUp(productTypeFinderPopUp);
                productTypeFinderPopUp = null;
            }
