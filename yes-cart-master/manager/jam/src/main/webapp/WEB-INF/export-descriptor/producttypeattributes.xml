<export-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/schema/export-descriptor.xsd">

    <entity-type>org.yes.cart.domain.entity.ProductTypeAttr</entity-type>

    <export-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name>producttypeattributes-{timestamp}.csv</file-name>
        <print-header>true</print-header>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </export-file-descriptor>

    <select-sql>select pt from ProductTypeAttrEntity pt</select-sql>

    <export-columns>
        
        <column-descriptor>
            <column-header>GUID</column-header>
            <field-type>FIELD</field-type>
            <name>guid</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Product Type GUID</column-header>
            <field-type>FIELD</field-type>
            <name>producttype.guid</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Product Type Name</column-header>
            <field-type>FIELD</field-type>
            <name>producttype.name</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Attribute Code</column-header>
            <field-type>FIELD</field-type>
            <name>attribute.code</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Attribute Name</column-header>
            <field-type>FIELD</field-type>
            <name>attribute.name</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Rank</column-header>
            <field-type>FIELD</field-type>
            <name>rank</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Visible</column-header>
            <field-type>FIELD</field-type>
            <name>visible</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Similarity</column-header>
            <field-type>FIELD</field-type>
            <name>similarity</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Navigation Type</column-header>
            <field-type>FIELD</field-type>
            <name>navigationType</name>
        </column-descriptor>

        <column-descriptor>
            <column-header>Range Type</column-header>
            <field-type>FIELD</field-type>
            <name>rangeNavigation</name>
        </column-descriptor>

    </export-columns>

</export-descriptor>