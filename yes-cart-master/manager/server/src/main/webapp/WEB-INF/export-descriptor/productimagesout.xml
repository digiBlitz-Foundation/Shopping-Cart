<export-descriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:noNamespaceSchemaLocation="http://www.yes-cart.org/schema/export-descriptor.xsd">

    <entity-type>IMAGE</entity-type>

    <export-file-descriptor>
        <file-encoding>UTF-8</file-encoding>
        <file-name>productimages.zip</file-name>
        <print-header>false</print-header>
        <column-delimiter>;</column-delimiter>
        <text-qualifier>&quot;</text-qualifier>
    </export-file-descriptor>

    <select-sql>/imgvault/product/</select-sql>

    <export-columns>

        <column-descriptor>
            <column-header>Product ans SKU export</column-header>
            <field-type>FIELD</field-type>
            <data-type>STRING</data-type>
            <name>description</name>
            <value-constant>This is a product/sku image export</value-constant>
        </column-descriptor>

    </export-columns>

</export-descriptor>